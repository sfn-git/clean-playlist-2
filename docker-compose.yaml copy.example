services:
  frontend:
    build: ./frontend .
    ports: 
      - "8081:8080"
    environment:
      - VITE_API_URL=http://localhost:8080 #Same as backend APP_BASE_URL
  backend:
    build: ./backend .
    ports:
      - "8080:8080"
    environment:
      - SPOTIFY_CLIENT_ID="..."
      - SPOTIFY_CLIENT_SECRET="..."
      - APP_BASE_URL=http://localhost:8080 #Same as frontend VITE_API_URL